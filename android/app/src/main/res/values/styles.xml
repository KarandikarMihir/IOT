<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">#CFD8DC</item>
        <item name="android:statusBarColor">#1976D2</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
    	<item name="android:colorAccent">#2196F3</item>
	</style>
    <style name="MyTimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#2196F3</item>
    </style>   
    <style name="MyDialogTheme" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">#2196F3</item>
    </style>
</resources>
